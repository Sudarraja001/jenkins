pipeline {
  agent {
    label 'ssh-agent'
  }

  tools {
    nodejs 'node20'
  }

  triggers {
    pollSCM('*/1 * * * *')
  }

  stages {
    stage('Build') {
      steps {
        sh '''
          node -v
          npm -v
          npm install
        '''
      }
    }

    stage('Test') {
      steps {
        sh 'npm test'
      }
    }

    stage('Deploy') {
      steps {
        sh '''
          npm run build
          echo "Deploy step completed"
        '''
      }
    }
  }

  post {
    success {
      echo 'Pipeline completed successfully ğŸ‰'
    }
    failure {
      echo 'Pipeline failed âŒ'
    }
  }
}

