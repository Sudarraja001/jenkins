pipeline {
  agent {
    label 'ssh-agent'
  }

  triggers {
    pollSCM('*/1 * * * *')
  }

  stages {

    stage('Build') {
      steps {
        dir('app') {
          sh '''
            node -v
            npm -v
            npm install
          '''
        }
      }
    }

    stage('Test') {
      steps {
        dir('app') {
          sh 'npm test'
        }
      }
    }

    stage('Deploy') {
      steps {
        dir('app') {
          sh '''
            npm run build
            echo "Deploy step completed"
          '''
        }
      }
    }

  }

  post {
    success {
      echo 'Pipeline completed successfully'
    }
    failure {
      echo 'Pipeline failed'
    }
  }
}
