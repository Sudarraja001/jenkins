pipeline {
  agent {
    label 'cloud-docker-agent-1'
  }

  triggers {
    pollSCM('*/1 * * * *')   // every 1 minute (30s not supported, see note below)
  }

  stages {
    stage('Build') {
      steps {
        echo 'Installing dependencies...'
        sh 'npm install'
      }
    }

    stage('Test') {
      steps {
        echo 'Running tests...'
        sh 'npm test'
      }
    }

    stage('Deploy') {
      steps {
        echo 'Deploying application...'
        sh 'npm run build'
        sh 'echo "Deploy step completed"'
      }
    }
  }

  post {
    success {
      echo 'Pipeline completed successfully ğŸ‰'
    }
    failure {
      echo 'Pipeline failed âŒ'
    }
  }
}

